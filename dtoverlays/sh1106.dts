/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&spi1>;
        __overlay__ {
            status = "okay";

            sh1106@0 {
                compatible = "sino,sh1106";
                reg = <0>; // CS0
                spi-max-frequency = <10000000>;

                dc-gpios = <&gpio 25 0>;    // GPIO25 = D/C
                reset-gpios = <&gpio 24 0>; // Optional Reset
                width = <132>;
                height = <64>;
            };
        };
    };
};