/dts-v1/;
/plugin/;

/ {
    fragment@0 {
        #address-cells = <2>;
        #size-cells = <1>;
        
        target = <&spi1>;
        __overlay__ {
            #address-cells = <2>;
            #size-cells = <1>;
            spidev@2 {
                reg = <0 2 0>;        // Match #address-cells and #size-cells
                status = "okay";
            };
        };
    };

    fragment@1 {
        target = <&spi1>;
        __overlay__ {
            #address-cells = <2>;
            #size-cells = <1>;

            sh1106@2 {
                compatible = "sino,sh1106";
                reg = <0 2 0>;  // Match #address-cells and #size-cells
                spi-max-frequency = <10000000>;
                buswidth = <8>;
                dc-gpios = <&gpio 25 0>;
                reset-gpios = <&gpio 24 0>;
                status = "okay";
            };
        };
    };

    fragment@2 {
        target-path = "/";
        __overlay__ {
            sh1106_pins: sh1106_pins {
                brcm,pins = <24 25>;
                brcm,function = <1 1>;
                brcm,pull = <0 0>;
            };
        };
    };
};