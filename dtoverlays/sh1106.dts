/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&spidev0>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            sh1106@2 {
                compatible = "sino,sh1106"; // Replace with your device's compatible string
                reg = <2>; // CE2 (Chip Enable 2)
                spi-max-frequency = <10000000>; // 10 MHz
                dc-gpios = <&gpio 25 0>; // GPIO25 for Data/Command
                reset-gpios = <&gpio 24 0>; // GPIO24 for Reset
                status = "okay";
            };
        };
    };

    fragment@1 {
        target-path = "/";
        __overlay__ {
            sh1106_pins: sh1106_pins {
                brcm,pins = <16 20 21 24 25>; // GPIO16 (CE2), GPIO20 (MOSI), GPIO21 (SCLK), GPIO24 (Reset), GPIO25 (DC)
                brcm,function = <4 4 4 1 1>; // Set GPIO16, GPIO20, GPIO21 to ALT4 (SPI1), GPIO24 and GPIO25 to output
                brcm,pull = <0 0 0 0 0>; // No pull-up or pull-down
            };
        };
    };

    fragment@2 {
        target = <&spi1>;
        __overlay__ {
            spidev@2 {
                status = "disabled"; // Disable spidev@2 to avoid conflicts
            };
        };
    };
};
