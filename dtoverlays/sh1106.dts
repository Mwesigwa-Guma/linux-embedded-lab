/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&spidev0>;
        __overlay__ {
            status = "disabled";
        };
    };

    fragment@1 {
        target = <&spi0>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;

            sh1106: sh1106@0{
                compatible = "sino,sh1106";
                reg = <0x0>;
                spi-max-frequency = <10000000>;
                dc-gpios = <&gpio 25 0>;
                status = "okay";
            };
        };
    };
};
